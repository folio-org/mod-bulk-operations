{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "List summary results for profiles",
  "type": "object",
  "properties": {
    "content": {
      "description": "Array of profile summary DTOs",
      "type": "array",
      "items": {
        "$ref": "#/ProfileSummaryDto"
      }
    },
    "totalRecords": {
      "description": "Total number of profile records",
      "type": "integer",
      "format": "int64"
    }
  },
  "additionalProperties": false,
  "required": [
    "content",
    "totalRecords"
  ],
  "ProfileSummaryDto": {
    "description": "Profile Summary Dto",
    "type": "object",
    "properties": {
      "id": {
        "description": "Profile ID",
        "type": "string",
        "format": "uuid"
      },
      "name": {
        "description": "Profile name",
        "type": "string"
      },
      "description": {
        "description": "Indicates description of the profile.",
        "type": "string"
      },
      "locked": {
        "description": "Indicates whether the profile is locked and cannot be modified.",
        "type": "boolean"
      },
      "entityType": {
        "description": "Entity type",
        "$ref": "entity_type.json#/EntityType"
      },
      "ruleDetails": {
        "description": "Rule Collection",
        "type": "array",
        "items": {
          "$ref": "rule_details.json#/RuleDetails"
        }
      },
      "marcRuleDetails": {
        "description": "Bulk Operation Marc Rule Collection",
        "type": "array",
        "items": {
          "$ref": "marc_rule_details.json#/MarcRuleDetails"
        }
      },
      "createdDate": {
        "description": "Date and time when the record was created",
        "type": "string",
        "format": "date-time"
      },
      "createdBy": {
        "description": "ID of the user who created the record (when available)",
        "type": "string",
        "format": "UUID"
      },
      "updatedDate": {
        "description": "Date and time when the record was last updated",
        "type": "string",
        "format": "date-time"
      },
      "updatedBy": {
        "description": "ID of the user who last updated the record (when available)",
        "type": "string",
        "format": "UUID"
      }
    },
    "required": [
      "id",
      "name",
      "entityType",
      "locked"
    ],
    "additionalProperties": false
  }
}

{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "A collection of ILL policies",
  "IllPolicyCollection": {
    "type": "object",
    "properties": {
      "illPolicies": {
        "description": "List of ILL policies",
        "type": "array",
        "items": {
          "$ref": "illPolicy.json#/IllPolicy"
        }
      },
      "totalRecords": {
        "description": "Estimated or exact total number of records",
        "type": "integer"
      }
    },
    "required": [
      "illPolicies",
      "totalRecords"
    ]
  }
}
